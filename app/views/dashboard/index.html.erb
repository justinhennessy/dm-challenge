<div style="text-align: center">
  <div class="row">
    <h1 class="span9">
      <%= @challenge.name %><br>
      <small><%= challenge_countdown %></small>
    </h1>
  </div>
  <div class="row">
    <div class="span3 offset3">
      <button class="btn btn-primary btn-block" style="height: 70px; font-size: 50px;"><%= @challenge.target %></button>
      <p>Challenge Total</p>
    </div>
  </div>

  <div class="row" style="">
    <div class="span3">
      <button class="btn btn-info btn-block" style="height: 70px; font-size:50px;"><%= @challenge.accumulated_total %></button>
      <p>Team Total</p>
    </div>

    <div class="span3">
      <button class="btn btn-info btn-block" style="height: 70px; font-size: 50px;"><%= @challenge.target_needed_to_date %></button>
      <p>Needed</p>
    </div>

    <div class="span3">
      <button class="<%= style_deficit %> btn-block" style="height: 70px; font-size: 50px;"><%= @challenge.deficit %></button>
      <p>Deficit</p>
    </div>
  </div>

  <br><br><br>



<div class="modal hide fade" id="myModal">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">×</a>
    <h3>Modal header</h3>
  </div>
  <div class="modal-body">
    <p>One fine body…</p>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn">Close</a>
    <a href="#" class="btn btn-primary">Save changes</a>
  </div>
</div>

<%= link_to 'Launch Modal', '#', class: 'btn', data: {
  toggle: 'modal',
  target: '#myModal'
} %>

