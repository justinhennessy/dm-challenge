<h1><%= @user.preferred_name %>'s activities</h1>
<%= link_to "Add", new_user_activity_path(@user), class: "btn btn-success" %>
<% if @activities.count == 0 %>
<br><br>
There are currently no activities!
<% else %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>KMS</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @activities.order('date desc').each do |activity| %>
      <tr>
        <td><%= activity.date %></td>
        <td><%= activity.value %></td>
        <td><%= link_to 'Edit', edit_user_activity_path(@user, activity) %>
            <%= link_to 'Delete', user_activity_path(@user, activity),
                class: 'button',
                method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>
<% end %>
