<h1><%= @user.preferred_name %>'s activities</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>KMS</th>
    </tr>
  </thead>
  <tbody>  
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.date %></td>
        <td><%= activity.value %></td>
      </tr>
    <%end%>
  </tbody>
</table>
