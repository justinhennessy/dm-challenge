<h1>New Activity</h1>
<%= form_for([@user, @activity]) do |f| %>

  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :date %>
        <%= f.text_field :date, autofocus: true %>
      </li>
      <li class="required">
        <%= f.label :value %>
        <%= f.text_field :value%>
      </li>
    </ol>
    <p>
      <%= f.submit %>
      <%= link_to "Cancel", user_activities_path(@user), class: 'button' %>
    </p>
  </fieldset>
<% end %>
