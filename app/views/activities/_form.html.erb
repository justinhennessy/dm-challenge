<%= form_for([@user, @activity]) do |f| %>
  <%=  render "shared/errors", object: @activity %>
  <fieldset>
    <div class="row">
      <div class="span3 required">
        <%= f.label :date %>
        <%= f.text_field :date, autofocus: true %>
      </div>
    </div>
    <div class="row">
      <div class="span3">
        <small>(date format: YYYY-MM-DD)</small>
      </div>
    </div>
    <div class="row">
      <div class="span3 required">
        <%= f.label :value %>
        <%= f.text_field :value%>
      </div>
    </div>
    <div class="row">
      <div class="span3 required">
        <%= f.submit %>
        <%= link_to "Cancel", user_activities_path(@user), class: 'button' %>
      </div>
    </div>
  </fieldset>
<% end %>
